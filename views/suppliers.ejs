<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('templates/header') %>
</head>
<body>
    <%-include('templates/navbar') %>
    <div class="container-fluid mt-5 container-main">
        <div class="d-flex align-items-center vh-90">
            <div class="d-flex justify-content-center w-100">
                <div class="card text-center" style="width: 33rem; height: 37rem;background-color:rgba(0, 0, 0, 0.6);">
                    <img src="https://cloudbeds-fcfc.kxcdn.com/wp-content/uploads/2020/01/istock-1061318342-1-e1671626433275.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">Huespedes</h5>
                                <p class="card-text">Revisa quienes se estan hospedando en tu hotel</p>
                        <div class="d-flex justify-content-center">
                            <button class="button" data-toggle="modal"
                                data-target="#registrarProveedorModal">
                                <span class="oi oi-dollar"></span> Registrar Nuevo Huesped
                            </button>
                            <p class="card-text">ㅤㅤㅤㅤ</p>
                            <button class="button" data-toggle="modal" data-target="#verProveedoresModal">
                                <span class="oi oi-cart"></span> Listado de Huespedes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="registrarProveedorModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar Huesped</h5>
                    <button type="button" class="btn btn-danger" class="close" data-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--
                    Cambiar
                -->
                    <form>
                        <div class="form-group">
                            <label for="idSupplier">Numero Documento</label>
                            <input type="text" class="form-control" id="idSupplier"
                                placeholder="Ingrese el Numero del Documeto de Identificacion">
                            <label for="nameSupplier">Nombre</label>
                            <input type="text" class="form-control" id="nameSupplier"
                                placeholder="Ingrese el Nombre">
                            <label for="numberSupplier">Telefono</label>
                            <input type="number" class="form-control" id="numberProduct"
                                placeholder="Ingrese el Numero de Contacto">
                            <label for="emailSupplier">Correo</label>
                            <input type="email" class="form-control" id="emailSupplier"
                                placeholder="Ingrese el Correo">
                        </div>
                    </form>
                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="saveProduct" onclick="saveSupplier()">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="verProveedoresModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Listado De Huespedes</h5>
                    <button type="button" class="btn btn-danger" class="close" data-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--
                    Cambiar
                -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Documento</th>
                                    <th>Nombre</th>
                                    <th>Telefono</th>
                                    <th>Correo</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <% if (supplier.size> 0){
                                        for (const [k, v] of supplier){ %>
                                        <tr>
                                            <td><%= v.id %></td>
                                            <td><%= v.name %></td>
                                            <td><%= v.number %></td>
                                            <td><%= v.email %></td>
                                        </tr>
                                        <% } } else{ %>
                                <tr>
                                    <td colspan="5">
                                        <h3>No se Han Registrado Huespedes</h3>
                                    </td>
                                </tr>
                                <% } %>
                                    </tr>

                            </tbody>
                        </table>
                    </div>

                    <!--
                    Cabiar
                -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <%-include('templates/scripts') %>
</body>
</html>